{
  "extends": "../zlux-app-manager/virtual-desktop/plugin-config/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "../zlux-platform/interface/src/index.d.ts"
  ],
  "files": [
    "src/plugin.ts",
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "module": "amd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}